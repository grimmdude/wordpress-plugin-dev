{
    "require-dev": {
        "squizlabs/php_codesniffer": "*",
        "wp-coding-standards/wpcs": "^2.3"
    },
    "scripts": {
		"phpcs": [
			"./vendor/bin/phpcs -d memory_limit=256M"
		]
	},
    "post-install-cmd": [
        "./vendor/bin/phpcs --config-set installed_paths /var/www/html/vendor/wp-coding-standards/wpcs/"
    ]
}
